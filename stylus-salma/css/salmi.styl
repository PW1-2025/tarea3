// Variables
primary = #4361EE
secondary = #3A0CA3
accent = #7209B7
text-dark =rgb(10, 28, 226)
text-medium = #4A4E69
text-light = #8E9AAF
bg-light = #F8F9FA
border-radius = 12px
shadow = 0 4px 20px rgba(0, 0, 0, 0.08)

// Base styles
body
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif
  background-color: bg-light
  color: text-dark
  line-height: 1.5
  margin: 0
  padding: 0

.contenedor
  max-width: 1200px
  margin: 0 auto
  padding: 40px 20px
  text-align: center

// Typography
h1
  font-size: 2.5rem
  font-weight: 700
  margin-bottom: 0.5rem
  color: secondary

h2
  font-size: 1.5rem
  font-weight: 600
  color: primary
  margin-bottom: 1rem

.descripcion-frontier
  font-size: 1.125rem
  color: text-medium
  max-width: 600px
  margin: 0 auto 2rem

// Pricing options toggle
.opciones-precio
  display: inline-flex
  background: white
  padding: 6px
  border-radius: 50px
  margin: 20px 0 40px
  box-shadow: shadow

.opcion
  padding: 10px 24px
  border-radius: 50px
  font-weight: 500
  cursor: pointer
  transition: all 0.2s

  &.mensual
    background-color: primary
    color: white

  &.anual
    color: text-medium

// Divider
.divisor
  border: none
  height: 1px
  background-color: rgba(0, 0, 0, 0.1)
  margin: 20px 0 40px

// Pricing plans container
.planes-contenedor
  display: flex
  justify-content: center
  gap: 24px
  flex-wrap: wrap
  margin: 30px 0

// Individual plan cards
.plan-precio
  flex: 1
  min-width: 280px
  max-width: 320px
  background: white
  border-radius: border-radius
  padding: 32px
  box-shadow: shadow
  text-align: left
  transition: transform 0.3s ease

  &:hover
    transform: translateY(-5px)

  &.gratis
    border-top: 4px solid text-light

  &:nth-child(2)
    border-top: 4px solid primary

  &:nth-child(3)
    border-top: 4px solid accent

.encabezado-plan
  margin-bottom: 16px

.nombre-plan
  display: block
  font-size: 1.25rem
  font-weight: 600
  margin-bottom: 8px
  color: text-dark

.precio-plan
  font-size: 2.5rem
  font-weight: 700
  color: text-dark

  &.gratis
    color: text-medium

.info-facturacion
  display: block
  font-size: 0.875rem
  color: text-light
  margin-bottom: 16px

// Buttons
.boton-plan
  display: block
  width: 100%
  padding: 12px
  border-radius: 8px
  background-color: primary
  color: white
  font-weight: 600
  text-align: center
  text-decoration: none
  margin: 24px 0
  transition: background-color 0.2s

  &:hover
    background-color: secondary

  &.contacto
    background-color: white
    color: primary
    border: 2px solid primary

    &:hover
      background-color: primary
      color: white

// Features list
.caracteristicas-plan
  list-style: none
  padding: 0
  margin: 0

  li
    padding: 8px 0
    position: relative
    padding-left: 24px
    color: text-medium

    &:before
      content: "â€¢"
      color: primary
      position: absolute
      left: 0
      font-size: 1.5rem
      line-height: 1

// Weather info
.info-clima
  display: flex
  justify-content: space-between
  margin-top: 60px
  padding: 16px 24px
  background: white
  border-radius: border-radius
  box-shadow: shadow
  color: text-medium
  font-size: 0.875rem

// Responsive styles
@media (max-width: 768px)
  .planes-contenedor
    flex-direction: column
    align-items: center

  .plan-precio
    max-width: 100%

  .info-clima
    flex-direction: column
    gap: 8px